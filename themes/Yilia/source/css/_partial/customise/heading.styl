h1 
    margin-top 30px

h2 
    margin .5em auto
    font-weight bold
    color #9c9
    padding-bottom 5px
    border-bottom 1px solid #ddd
    &hover 
        color #88acdb
    text-align center
    &before, &after 
        content" —— "
        font-family Arial

h3 
    margin .5em auto
    color #438aac
    background rgba(243, 248, 253, .6)
    border 1px solid #d2e8fa
    padding .2em .6em
    font-weight normal
    &hover a 
        text-decoration underline
    &after 
        content " >"

h4, h5, h6
    margin-top 20px
    font-weight bold
    color #574C4C
    padding-bottom 5px
    border-bottom 1px solid #ddd
    &hover 
        color#88acdb
